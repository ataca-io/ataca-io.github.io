            </div>
            <div class="border-t border-gray-800 pt-8 text-center text-sm text-gray-500">
                <p>&copy; 2025 ataca.io. All rights reserved. SOC 2 Type II Certified ‚Ä¢ GDPR Compliant ‚Ä¢ PCI DSS Level 1</p>
            </div>
        </div>
    </footer>

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('open');
        }

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const menu = document.getElementById('mobileMenu');
            const isClickInside = menu.contains(event.target);
            const isMenuButton = event.target.closest('button[onclick="toggleMobileMenu()"]');
            
            if (!isClickInside && !isMenuButton && menu.classList.contains('open')) {
                menu.classList.remove('open');
            }
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

